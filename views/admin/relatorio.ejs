<body>
  <div id="app">
    <div class="main-wrapper main-wrapper-1">
      <div class="navbar-bg"></div>
       <!--Nav bar-->
       <%- include partials/navbar.ejs %> 
       <!--sidebar-->
     
 <%- include partials/sidebar.ejs %> 

      <!-- Main Content -->
      <div class="main-content">
        <section class="section">
          <div class="section-header">
            <h1>Activities</h1>
            <div class="section-header-breadcrumb">
              <div class="breadcrumb-item active"><a href="#">Dashboard</a></div>
              <div class="breadcrumb-item">Relatorio</div>
            </div>
          </div>
          <div class="section-body">
            <h2 class="section-title">Relatorio Submetido</h2>
            <div class="row">
              <div class="col-12">
                <div class="activities">
                  <% relatorio_s.forEach(relatorio => { %>  
                  <div class="activity">
                    <div class="activity-icon bg-primary text-white shadow-primary">
                      <i class="fas fa-comment-alt"></i>
                    </div>
                   
                    <div class="activity-detail">
                      <div class="mb-4">
                        <span class="text-job text-primary">Data:<%= relatorio.createdAt %> </span> <br>
                        <span class="text-job text-primary">Relatorio Submetido pelo: <%= relatorio.user.name %> <b> Contacto:<%= relatorio.user.tel %></b> </span>
                        <span class="bullet"></span>
                        <a class="text-job" href="#"></a>
                        <div class="float-right dropdown">
                          <a href="#" data-toggle="dropdown"><i class="fas fa-ellipsis-h"></i></a>
                          <div class="dropdown-menu">
                            <div class="dropdown-title">Options</div>
                            <a href="/admin/relatario/notify/<%= relatorio.id %> " class="dropdown-item has-icon"><i class="fas fa-eye"></i> View</a>
                            <div class="dropdown-divider"></div>
                          </div>
                        </div>
                      </div>
                      <p><span class="text-job text-primary">Classificação da sinistralidade <%= relatorio.tipo_sinistralidade %> .</p>
                    </div>
                   
                  </div>
                 <% }) %>
                </div>
              </div>
            </div>
          </div>
        </section>
      </div>
      <footer class="main-footer">
        <div class="footer-left">
          Copyright &copy;
          <script>
            document.write(new Date().getFullYear())
          </script>
        </div>
        <div class="footer-right">

        </div>
      </footer>
          
        </div>
      </footer>
    </div>
  </div>

  <!-- General JS Scripts -->
  <script src="/assets/modules/jquery.min.js"></script>
  <script src="/assets/modules/popper.js"></script>
  <script src="/assets/modules/tooltip.js"></script>
