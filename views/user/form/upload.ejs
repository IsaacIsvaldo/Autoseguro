                                <input type="file" name="image" id="image-upload" autofocus required />
                              </div>
                            </div>
                          </div>

                         


                          <div class="form-group">
                            <div class="custom-control custom-checkbox">
                              <input type="checkbox" name="agree" class="custom-control-input" id="agree" autofocus
                                required>
                              <label class="custom-control-label" for="agree">  Esta tudo Certo </label>
                              
                            </div>
                          </div>

                          <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-lg btn-block">
                              Atualizar Foto
                            </button>
                          </div>
                        </form>
                      </div>
                    </div>
