<body>
  <div id="app">
    <section class="section">
      <div class="container mt-5">
        <div class="row">
          <div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4">
            <div class="login-brand">
              <img src="assets/img/12.svg" alt="logo" width="100" class="shadow-light rounded-circle">
            </div>

            <div class="card card-primary">
              <div class="card-header"><h4>Iniciar sessão</h4></div>

              <div class="card-body">
                <form  class="needs-validation" novalidate="">
                  <div class="form-group">
                    <label for="email">Usuário:</label>
                    <input id="email" type="email" class="form-control" name="email" tabindex="1" required autofocus>
                    <div class="invalid-feedback">
                      introduza o nome de Usuario
                      
                    </div>
                  </div>

                  <div class="form-group">
                    <div class="d-block">
                    	<label for="password" class="control-label">Senha:</label>
                      <div class="float-right">
                        <a href="/user/token" class="text-small">
                          esqueceu a senha?
                        </a>
                      </div>
                    </div>
                    <input id="password" type="password" class="form-control" name="senha" tabindex="2" required>
                    <div class="invalid-feedback">
                      Introduza a senha
                    </div>
                  </div>

                  <div class="form-group">
                    <div class="custom-control custom-checkbox">
                      <input type="checkbox" name="remember" class="custom-control-input" tabindex="3" id="remember-me">
                      <label class="custom-control-label" for="remember-me">Lembrar Me</label>
                    </div>
                  </div>

                  <div class="form-group">
                    <button  onclick="postData()" class="btn btn-primary btn-lg btn-block" tabindex="4">
                     Entrar
                    </button>
                  </div>
                </form>
                <div class="text-center mt-4 mb-3">
                  <div class="text-job text-muted"> Não tens uma conta? <a href="/registar_se">Criar uma</a></div>
                </div>
                

              </div>
            </div>
            <div class="mt-5 text-muted text-center">
             
            </div>
            <div class="simple-footer">
                Copyright &copy; <script>
                  document.write(new Date().getFullYear())
              </script>
               _<a href="/">AutoSeguro</a>
              </div>
          </div>
        </div>
      </div>
    </section>
  </div>
  <script src="/assets/modules/sweetalert/sweetalert2.all.min.js"></script>
 
